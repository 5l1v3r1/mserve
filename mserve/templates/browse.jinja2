<!DOCTYPE html>
<html>
    <head>
        <title>mserve</title>
    </head>
    <body>
        <h1>browse</h1>
        <form method="get">
            <label>artist</label>
            <input type="text" name="artist">
            <br>
            <label>title</label>
            <input type="text" name="title">
            <br>
            <label>year from</label>
            <input type="text" name="year_from">
            <br>
            <label>year to</label>
            <input type="text" name="year_to">
            <br>
            <label>genre</label>
            <input type="text" name="genre">
            <br>
            <input type="submit" value="go">
        </form>
        {% if results is defined %}
            <h1>results</h1>
            choose an album to download:
            <table>
                <thead>
                    <tr>
                        <td>artist</td>
                        <td>title</td>
                        <td>year</td>
                        <td>(genre)</td>
                    </tr>
                </thead>
                <tbody>
                    {% for release, artist, title, year, genre in results %}
                        <tr>
                            <td>{{ artist }}</td>
                            <td><a href="/download/{{ release }}">{{ title }}</a></td>
                            <td>{{ year }}</td>
                            <td>({{ genre }})</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </body>
</html>

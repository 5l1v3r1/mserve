<!DOCTYPE html>
<html>
    <head>
        <title>mserve</title>
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/bootstrap.min.css') }}">
    </head>
    <body>
        <div class="container">
            <!-- <div class="panel panel-default"> -->
            <!--     <div class="panel-heading"> -->
            <h1>Album Search</h1>
            <hr>
                <!-- </div> -->
                <!-- <div class="panel-body"> -->
            <form id="search-form" class="form-horizontal" method="get">
                <div class="form-group">
                    <label for="artist" class="col-sm-2 control-label">Artist</label>
                    <div class="col-sm-10">
                        <input type="text" id="artist" class="form-control" name="artist" placeholder="regex">
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" id="title" class="form-control" name="title" placeholder="regex">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Years</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input id="year_from" name="year_from" type="number" class="form-control" placeholder="From"/>
                            <span class="input-group-addon">-</span>
                            <input id="year_to" name="year_to" type="number" class="form-control" placeholder="To"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="genre" class="col-sm-2 control-label">Genre</label>
                    <div class="col-sm-10">
                        <input type="text" id="genre" class="form-control" name="genre" placeholder="regex">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </div>
            </form>
                <!-- </div> -->
            <!-- </div> -->
            <span id="results-area" style="visibility: hidden">
                <hr>
                <h2>Results</h2>
                <table class="table table-condensed table-hover table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Artist</th>
                            <th><span class="glyphicon glyphicon-download-alt"></span> Title</th>
                            <th>Year</th>
                            <th>Genre</th>
                        </tr>
                    </thead>
                    <tbody id="results">
                    </tbody>
                </table>
            </span>
        </div>
    </body>
    <script type="text/javascript" src="{{ url_for('static', filename='jquery-3.1.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='script.js') }}"></script>
</html>
